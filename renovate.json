{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "printConfig":true,
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["registry.access.redhat.com/ubi8/ubi-minimal"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)-(?<patch>\\d+)(\\.(?<build>.*))?$"
    },
    {
      "matchDatasources": ["maven"],
      "matchPackageNames": ["org.graalvm.js:js"],
      "allowedVersions": "/1.0.0-rc\\d+/"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["graalvm/graalvm-ce-builds"],
      "extractVersion": "regex:^jdk-(?<version>.*)$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["foo.test"],
      "matchStrings": [
        "GRAALVM_VERSION: \"(?<currentValue>.+?)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "graalvm/graalvm-ce-builds"
    }
  ],
  "regexManagers": [
    {
      "description": "maven-jib",
      "fileMatch": [
        "(^|/)pom.xml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "<docker-base-image-jre11>\\s*(?<depName>.*?):(?<currentValue>.*?)@?(?<currentDigest>(sha256:[a-f0-9]+)?)\\s*<\/docker-base-image-jre11>",
        "<docker-base-image-jre11>\\s*(?<registryUrl>.*\\/)(?<depName>.*?):(?<currentValue>.*?)@?(?<currentDigest>(sha256:[a-f0-9]+)?)\\s*<\/docker-base-image-jre11>"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
